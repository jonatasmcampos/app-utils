<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MicrosoftTeamsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/ivMteamsComName"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="32dp"
        android:contentDescription="Icone do Microsoft Teams"
        />

    <TextView
        android:id="@+id/tvDescricaoMteams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:text="Reuniões, conversas, chamadas e colaboração em um só lugar."
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnInformacoesMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="btnInformacoes"
        android:text="Informações" />

    <Button
        android:id="@+id/btnCentralAjudaMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:onClick="btnCentralAjudaMteams"
        android:text="Central de ajuda" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tvSaibacomoMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saiba como: "
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvAgendarRMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Agendar uma reunião."
        android:clickable="true"
        android:onClick="linkAgendarMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/tvIngressarRMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ingressar em uma reunião."
        android:clickable="true"
        android:onClick="linkIngressarMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_ingressar" />

    <TextView
        android:id="@+id/tvGravarRMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Gravar uma reunião."
        android:clickable="true"
        android:onClick="linkGravarMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_gravar" />

    <TextView
        android:id="@+id/tvConvidarRMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Convidar pessoas para uma reunião."
        android:clickable="true"
        android:onClick="linkConvidarMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_convidar" />

    <TextView
        android:id="@+id/tvCompartilharTelaMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Compartilhar tela em uma reunião."
        android:clickable="true"
        android:onClick="linkCompartilharTelaMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_compartilhar_tela" />

    <TextView
        android:id="@+id/tvCompartilharSomMteams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Compartilhar som em uma reunião."
        android:clickable="true"
        android:onClick="linkCompartilharSomMteams"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_compartilhar_som" />

    <!-- VOLTAR PARA VIEW HOME   -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_home"
        app:fabCustomSize="50dp"
        android:onClick="irParaHome"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>