<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GoogleMeetActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/ivGmeetComName"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="32dp"
        android:contentDescription="Icone do Google Meet"
        android:src="@drawable/icon_gmeet_nome" />

    <TextView
        android:id="@+id/tvDescricaoGmeet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:text="O Google Meet é um serviço de videocomunicação. Conecte-se, colabore e celebre com segurança de qualquer lugar."
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCursoTreinamentoGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="btnTreinamento"
        android:text="Curso de treinamento" />

    <Button
        android:id="@+id/btnTutorialPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="btnPdf"
        android:text="Tutorial PDF" />

    <Button
        android:id="@+id/btnCentralAjudaGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:onClick="btnCentralAjudaGmeet"
        android:text="Central de ajuda" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/tvSaibacomoGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saiba como: "
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvCriarRGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Criar reunião."
        android:clickable="true"
        android:onClick="linkCriarGmeet"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/tvIngressarRGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ingressar em uma reunião."
        android:clickable="true"
        android:onClick="linkIngressarGmeet"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_ingressar" />

    <TextView
        android:id="@+id/tvGravarRGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Gravar uma reunião."
        android:clickable="true"
        android:onClick="linkGravarGmeet"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_gravar" />

    <TextView
        android:id="@+id/tvConvidarRGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Convidar pessoas para uma reunião."
        android:clickable="true"
        android:onClick="linkConvidarGmeet"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_convidar" />

    <TextView
        android:id="@+id/tvCompartilharTelaGmeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Compartilhar tela em uma reunião."
        android:clickable="true"
        android:onClick="linkCompartilharGmeet"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        app:drawableStartCompat="@drawable/ic_compartilhar_tela" />

        <!-- VOLTAR PARA VIEW HOME   -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_home"
        app:fabCustomSize="50dp"
        android:onClick="irParaHome"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>